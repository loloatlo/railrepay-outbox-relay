{
  "name": "@railrepay/outbox-relay",
  "version": "1.0.0",
  "description": "outbox-relay service for RailRepay MVP - Transactional Outbox Pattern implementation",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "start": "node --loader ts-node/esm src/index.ts",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create"
  },
  "keywords": [
    "railrepay",
    "outbox-relay",
    "transactional-outbox",
    "kafka",
    "event-relay"
  ],
  "author": "RailRepay Team",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.0.0",
    "node-pg-migrate": "^7.0.0",
    "supertest": "^7.2.2",
    "testcontainers": "^10.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@railrepay/metrics-pusher": "file:./vendor/@railrepay/metrics-pusher",
    "@railrepay/postgres-client": "^1.0.0",
    "@railrepay/winston-logger": "^1.0.0",
    "express": "^4.18.0",
    "kafkajs": "^2.2.0",
    "pg": "^8.11.0",
    "prom-client": "^15.1.3",
    "winston": "^3.11.0"
  }
}
